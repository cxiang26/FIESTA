{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure (Debug)",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build esdf_standalone",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "cmake --build build --target esdf_standalone -j$(nproc)"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc",
      "dependsOn": [
        "Configure (Debug)"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean build",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "rm -rf build && mkdir -p build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
} 